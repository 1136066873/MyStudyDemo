<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haier.demo.roundpicimageviewdemo.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />

    <com.haier.demo.roundpicimageviewdemo.helper.RCRelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:round_corner_top_left="16dp"
        app:round_corner_top_right="16dp"
        android:background="@android:color/transparent">

        <com.haier.demo.roundpicimageviewdemo.helper.RCImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:round_corner_top_left="16dp"
            app:round_corner_top_right="16dp"
            android:src="@drawable/photo1"/>



    </com.haier.demo.roundpicimageviewdemo.helper.RCRelativeLayout>




</RelativeLayout>
